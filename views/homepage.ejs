        <h1 class="header tweeter">Welcome to the resource homepage</h1>
      </div>
      <button type="button" class="btn btn-info add-button">>
        <i class="fas fa-edit"></i>
        Compose
      </button>
    </nav>

  <div class="container h-100">
      <div class="d-flex justify-content-center h-100">
        <div class="searchbar">
          <input class="search_input" type="text" name="" placeholder="Search...">
          <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
        </div>
      </div>
    </div>

  <main class="container">

      <section class="new-url">
        <h2>Add new resource:</h2>
        <form method="POST" action="/">
          <textarea placeholder="Add URL..." required="required" class="url-area" name="text"></textarea>
          <textarea placeholder="Title..." required="required" class="title-area" name="text"></textarea>
          <textarea placeholder="Description..." required="required" class="descr-area" name="text"></textarea>
          <textarea placeholder="Category..." required="required" class="cat-area" name="text"></textarea>
          <textarea placeholder="Image URL..."></textarea>
          <input type="submit" value="Add" />
        </form>
      </section>

      <section class="existing-resource grid">
      <%# <div class=eachResource> %>
        <%# <div class="title"> My Javascript Tips </div>
